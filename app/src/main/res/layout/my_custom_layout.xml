<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tmmmt.arrowtab.ArrowTab
        android:id="@+id/arrowTab"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        app:tab_radius="3dp"
        app:tab_stork_width="0.5dp"
        app:tab_color_selected="@android:color/holo_green_dark"
        app:tab_size="2"
        app:tab_text_color_selected="@android:color/white"
        app:tab_titles="@array/titles" />


    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/stroke"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="1dp"
            android:background="#fff"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/app_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/app_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>